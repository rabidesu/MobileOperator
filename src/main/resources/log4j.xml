<?xml version='1.0' encoding='ISO-8859-1' ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>


    <appender name="LOG-INFO-FILE-APPENDER" class="org.apache.log4j.FileAppender">
        <param name="file" value="D:/IdeaProjects/logs/info.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t]: %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="INFO"/>
            <param name="LevelMax" value="INFO"/>
        </filter>
    </appender>

    <appender name="LOG-ERR-FILE-APPENDER" class="org.apache.log4j.FileAppender">
        <param name="file" value="D:/IdeaProjects/logs/err.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%%-5p [%t]: %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="ERROR"/>
            <param name="LevelMax" value="ERROR"/>
        </filter>
    </appender>
    <logger name="org.hibernate">
        <level value="info"/>
    </logger>

    <category name="com.tsystems.jschool.mobile">
        <appender-ref ref="LOG-INFO-FILE-APPENDER"/>
        <appender-ref ref="LOG-ERR-FILE-APPENDER"/>
    </category>

    <root>
        <priority value="All"/>
        <appender-ref ref="LOG-INFO-FILE-APPENDER"/>
        <appender-ref ref="LOG-ERR-FILE-APPENDER"/>
    </root>

</log4j:configuration>